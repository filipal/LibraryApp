<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="360.0" prefWidth="351.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.ReturnBookDialogController">
   <children>
      <AnchorPane prefHeight="360.0" prefWidth="351.0">
         <children>
            <Label layoutX="143.0" layoutY="14.0" text="BiblioTech">
               <font>
                  <Font name="Roboto" size="14.0" />
               </font>
            </Label>
            <Label fx:id="bookTitleLabel" layoutX="16.0" layoutY="78.0" text="Book Title">
               <font>
                  <Font name="Roboto" size="12.0" />
               </font>
            </Label>
            <Label fx:id="numberOfBooksLabel" layoutX="14.0" layoutY="119.0" text="Number of Books">
               <font>
                  <Font name="Roboto" size="12.0" />
               </font>
            </Label>
            <TextField fx:id="bookTitleTextField" layoutX="78.0" layoutY="73.0" prefHeight="25.0" prefWidth="261.0" promptText="Add Book Title">
               <font>
                  <Font name="Roboto" size="12.0" />
               </font>
            </TextField>
            <TextField fx:id="numberOfBooksTextField" layoutX="122.0" layoutY="115.0" prefHeight="23.0" prefWidth="93.0" promptText="Add No. Books">
               <font>
                  <Font name="Roboto" size="12.0" />
               </font>
            </TextField>
            <Button fx:id="returnButton" layoutX="135.0" layoutY="156.0" mnemonicParsing="false" onAction="#returnBook" text="Return Book">
               <font>
                  <Font name="Roboto" size="12.0" />
               </font>
            </Button>
            <Button fx:id="exitButton" layoutX="149.0" layoutY="318.0" mnemonicParsing="false" onAction="#exitDialog" prefHeight="25.0" prefWidth="54.0" text="Exit" textFill="#c70404">
               <font>
                  <Font name="Roboto" size="14.0" />
               </font>
            </Button>
            <Label fx:id="errorMessageLabel" layoutX="16.0" layoutY="185.0" prefHeight="126.0" prefWidth="323.0" textFill="#c70404" visible="false" wrapText="true">
               <font>
                  <Font name="Roboto Bold" size="12.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
