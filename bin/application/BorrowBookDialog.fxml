<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="360.0" prefWidth="351.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.BorrowBookDialogController">
   <children>
      <Label layoutX="140.0" layoutY="14.0" prefHeight="17.0" prefWidth="72.0" text="BiblioTech">
         <font>
            <Font name="Roboto" size="14.0" />
         </font>
      </Label>
      <Label fx:id="bookTitleLabel" layoutX="14.0" layoutY="90.0" text="Book Title">
         <font>
            <Font name="Roboto" size="12.0" />
         </font>
      </Label>
      <TextField fx:id="bookTitleTextField" layoutX="77.0" layoutY="86.0" prefHeight="25.0" prefWidth="244.0" promptText="Add Book Title">
         <font>
            <Font name="Roboto" size="12.0" />
         </font>
      </TextField>
      <TextField fx:id="numberOfBooksTextField" layoutX="77.0" layoutY="150.0" prefHeight="25.0" prefWidth="93.0" promptText="Add No. Books">
         <font>
            <Font name="Roboto" size="12.0" />
         </font>
      </TextField>
      <Button fx:id="borrowButton" layoutX="135.0" layoutY="228.0" mnemonicParsing="false" onAction="#borrowBook" text="Borrow Book">
         <font>
            <Font name="Roboto" size="12.0" />
         </font>
      </Button>
      <Button fx:id="exitButton" layoutX="152.0" layoutY="318.0" mnemonicParsing="false" onAction="#exitDialog" prefHeight="27.0" prefWidth="59.0" text="Exit" textFill="#c70404">
         <font>
            <Font name="Roboto" size="14.0" />
         </font>
      </Button>
      <Label fx:id="errorMessageLabel" layoutX="14.0" layoutY="255.0" prefHeight="53.0" prefWidth="327.0" textFill="#c70404" visible="false" wrapText="true">
         <font>
            <Font name="Roboto Bold" size="12.0" />
         </font>
      </Label>
      <Label layoutX="14.0" layoutY="155.0" text="Quantity">
         <font>
            <Font name="Roboto" size="12.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
