<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="360.0" prefWidth="351.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.AddBookDialogController">
   <children>
      <Label alignment="CENTER" layoutX="110.0" layoutY="14.0" prefHeight="17.0" prefWidth="129.0" text="BiblioTech">
         <font>
            <Font name="Roboto" size="14.0" />
         </font>
      </Label>
      <TextField fx:id="titleTextField" layoutX="110.0" layoutY="65.0" prefHeight="25.0" prefWidth="205.0" promptText="Add Book Title">
         <font>
            <Font name="Roboto" size="12.0" />
         </font>
      </TextField>
      <TextField fx:id="authorTextField" layoutX="110.0" layoutY="108.0" prefHeight="25.0" prefWidth="205.0" promptText="Add Author">
         <font>
            <Font name="Roboto" size="12.0" />
         </font>
      </TextField>
      <TextField fx:id="quantityTextField" layoutX="110.0" layoutY="150.0" prefHeight="25.0" prefWidth="68.0" promptText="Add Quan.">
         <font>
            <Font name="Roboto" size="12.0" />
         </font>
      </TextField>
      <Button fx:id="addBookButton" layoutX="142.0" layoutY="205.0" mnemonicParsing="false" onAction="#addBook" text="Add Book">
         <font>
            <Font name="Roboto" size="12.0" />
         </font>
      </Button>
      <Button fx:id="exitButton" layoutX="138.0" layoutY="316.0" mnemonicParsing="false" onAction="#exitDialog" prefHeight="29.0" prefWidth="75.0" text="Exit" textFill="#c70404">
         <font>
            <Font name="Roboto" size="14.0" />
         </font>
      </Button>
      <Label fx:id="errorMessageLabel" layoutX="27.0" layoutY="275.0" prefHeight="17.0" prefWidth="281.0" textFill="#c70404" visible="false">
         <font>
            <Font name="Roboto Black" size="12.0" />
         </font>
      </Label>
      <Label layoutX="27.0" layoutY="70.0" text="Book Title">
         <font>
            <Font name="Roboto" size="12.0" />
         </font>
      </Label>
      <Label layoutX="27.0" layoutY="112.0" text="Author">
         <font>
            <Font name="Roboto" size="12.0" />
         </font>
      </Label>
      <Label layoutX="27.0" layoutY="154.0" text="Quantity">
         <font>
            <Font name="Roboto" size="12.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
